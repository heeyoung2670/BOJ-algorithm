import sys
input = sys.stdin.readline

n = int(input())
meeting = []
for _ in range(n):
    s, e = map(int, input().split())
    meeting.append((s, e))
meeting.sort(key=lambda m: m[0])
meeting.sort(key=lambda m: m[1])

cnt = 0
end = 0
for i, j in meeting:
    if i >= end:
        end = j
        cnt += 1
print(cnt)
